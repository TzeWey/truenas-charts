#!/usr/bin/python3
import json
import re
import sys

from catalog_update.upgrade_strategy import datetime_versioning

RE_LATEST_VERSION = re.compile(r'\d{8}_\d{6}-latest')


def newer_mapping(image_tags):
    key = list(image_tags.keys())[0]
    tags = {t: t for t in image_tags[key] if RE_LATEST_VERSION.fullmatch(t)}

    version = datetime_versioning(list(tags), '%Y%m%d_%H%M%S-latest')

    if not version:
        return {}

    app_version = version.split('-')[0]  # remove trailing '-latest'
    app_version = app_version.replace('_', '-')  # replace _ with -

    return {
        'tags': {key: tags[version]},
        'app_version': app_version,
    }


if __name__ == '__main__':
    try:
        versions_json = json.loads(sys.stdin.read())
    except ValueError:
        raise ValueError('Invalid json specified')

    print(json.dumps(newer_mapping(versions_json)))
